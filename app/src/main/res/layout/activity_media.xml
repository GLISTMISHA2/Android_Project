<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#E9C849"
    tools:context=".media">


    <ListView
        android:id="@+id/songs_ListView"
        android:layout_width="384dp"
        android:layout_height="303dp"
        android:layout_margin="16dp"
        android:background="#FFF49C"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/song_name"
        android:layout_width="376dp"
        android:layout_height="55dp"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/seekBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songs_ListView"
        app:layout_constraintVertical_bias="0.52" />

    <TextView
        android:id="@+id/current_time"
        android:text="0:00"
        android:layout_width="37dp"
        android:layout_height="27dp"
        app:layout_constraintBottom_toTopOf="@+id/button_pervios"
        app:layout_constraintEnd_toStartOf="@+id/seekBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/song_name" />

    <TextView
        android:id="@+id/total_time"
        android:layout_width="37dp"
        android:layout_height="27dp"
        android:text="9:99"
        app:layout_constraintBottom_toTopOf="@+id/button_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/seekBar"
        app:layout_constraintTop_toBottomOf="@+id/song_name" />

    <TextView
        android:id="@+id/grom"
        android:layout_width="191dp"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:textSize="15dp"
        android:text="Громкость"
        app:layout_constraintBottom_toTopOf="@+id/seekBar_Vol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_stop" />

    <Button
        android:id="@+id/button_next"
        android:layout_width="64dp"
        android:layout_height="76dp"
        android:text="⏩"
        android:backgroundTint="#03A9F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.744"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songs_ListView"
        app:layout_constraintVertical_bias="0.489" />

    <Button
        android:id="@+id/button_pervios"
        android:layout_width="66dp"
        android:layout_height="73dp"
        android:text="⏪"
        android:backgroundTint="#2196F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.249"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songs_ListView"
        app:layout_constraintVertical_bias="0.489" />

    <Button
        android:id="@+id/button_play"
        android:layout_width="96dp"
        android:layout_height="86dp"
        android:text="▶️"
        android:backgroundTint="#B4E91E63"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songs_ListView" />

    <Button
        android:id="@+id/button_stop"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:text="⏹️"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:progressBackgroundTint="#F5FFFF"
        android:progressTint="#FFF4FF"
        android:thumbTint="#F1FFFF"
        app:layout_constraintBottom_toTopOf="@+id/button_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songs_ListView"
        app:layout_constraintVertical_bias="0.592" />

    <SeekBar
        android:id="@+id/seekBar_Vol"
        android:layout_width="248dp"
        android:layout_height="16dp"
        android:progressBackgroundTint="#F5FFFF"
        android:progressTint="#FFF4FF"
        android:thumbTint="#F1FFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_stop" />

</androidx.constraintlayout.widget.ConstraintLayout>