<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Button_сalculator"
        android:layout_width="345dp"
        android:layout_height="76dp"
        android:layout_marginTop="264dp"
        android:backgroundTint="#FF9800"
        android:text="Калькулятор"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="normal"
        app:cornerRadius="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Button_mediaplayer"
        android:layout_width="345dp"
        android:layout_height="76dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#FF1901"
        android:text="Медиаплеер"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="normal"
        app:cornerRadius="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Button_сalculator" />

    <Button
        android:id="@+id/Button_geo"
        android:layout_width="345dp"
        android:layout_height="76dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#4CAF50"
        android:text="Геолокация"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="normal"
        app:cornerRadius="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Button_mediaplayer" />

</androidx.constraintlayout.widget.ConstraintLayout>